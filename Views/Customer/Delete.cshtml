@model Customers.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="alert alert-warning mt-4">
        <h4 class="alert-heading">Are you sure you want to delete this customer?</h4>
        <hr />
        <div>
            <h5>@Model.Name</h5>
            <p><strong>Address:</strong> @Model.Address</p>
            <p><strong>Country:</strong> @Model.Country</p>
            <p><strong>Date of Birth:</strong> @Model.DOB.ToShortDateString()</p>
            <p><strong>Time Created:</strong> @Model.TimeCreated.ToString("yyyy-MM-dd HH:mm:ss")</p>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="ID" />
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Customer", "Customer")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>