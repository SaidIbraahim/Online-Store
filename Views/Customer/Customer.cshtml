@using Customers.Models;

@{
    ViewData["Title"] = "Customer List";
}

<div class="container mt-5">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <!-- Link to Register a new Customer -->
    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("Register", "Customer")" class="btn btn-success">Register New Customer</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Address</th>
                <th>Country</th>
                <th>DOB</th>
                <th>Time Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.ID</td>
                    <td>@customer.Name</td>
                    <td>@customer.Address</td>
                    <td>@customer.Country</td>
                    <td>@customer.DOB.ToShortDateString()</td>
                    <td>@customer.TimeCreated.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <!-- Action Buttons -->
                        <a href="@Url.Action("Edit", "Customer", new { id = customer.ID })" class="btn btn-primary btn-sm me-2">Edit</a>
                        <a href="@Url.Action("Delete", "Customer", new { id = customer.ID })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>