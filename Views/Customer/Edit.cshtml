@model Customers.Models.Customer

@{
    ViewData["Title"] = "Edit Customer";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" asp-for="Name" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Address</label>
                    <input type="text" class="form-control" asp-for="Address" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Country</label>
                    <input type="text" class="form-control" asp-for="Country" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Date of Birth</label>
                    <input type="date" class="form-control" asp-for="DOB" />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
            <div class="mt-3">
                <a href="@Url.Action("Customer", "Customer")" class="btn btn-secondary w-100">Go Back to Customer List</a>
            </div>
        </div>
    </div>
</div>